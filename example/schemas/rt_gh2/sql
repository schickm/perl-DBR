CREATE TABLE TBL(fields) (
    id INTEGER PRIMARY KEY AUTOINCREMENT
);

CREATE TABLE TBL(field_values) (
  id INTEGER PRIMARY KEY AUTOINCREMENT,
  field_id INTEGER NOT NULL,
  data VARCHAR(255) NOT NULL
);

