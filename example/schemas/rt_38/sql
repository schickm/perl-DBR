create table TBL(firstnames) (
 id integer primary key AUTOINCREMENT,
 firstname varchar(250),
 lastname_id integer
);

create table TBL(lastnames) (
 id integer primary key AUTOINCREMENT,
 lastname varchar(250)
);

insert into TBL(firstnames) (id,firstname,lastname_id) values (1,'Sam',1);
insert into TBL(firstnames) (id,firstname,lastname_id) values (2,'Mike',2);
insert into TBL(firstnames) (id,firstname,lastname_id) values (3,'John',0);
insert into TBL(firstnames) (id,firstname,lastname_id) values (4,'Dan',null);

insert into TBL(lastnames) (id,lastname) values (1,'Johnson');
